class UserAccount:
    def __init__(self, username, email, password):
        self.username = username
        self.email = email
        self.__password = password  #приватный атрибут

    def set_password(self, new_password):
        self.__password = new_password

    def check_password(self, password_to_check):
        return self.__password == password_to_check
    
    def get_info(self):
        return f"Username: {self.username}, Email: {self.email} Password: {self.__password}" 
  
user = UserAccount("victory", "viktoria4805@mail.ru", "12345") #объект аккаунта 

user.set_password("1234")
print(user.check_password("1234")) #проверяем
print(user.check_password("12345"))    
print(user.get_info())
